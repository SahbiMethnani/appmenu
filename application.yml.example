spring:
  datasource:
    url: jdbc:postgresql://NEON_HOST/DATABASE?sslmode=require
    username: USERNAME
    password: PASSWORD
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: false
    open-in-view: false

server:
  port: 8001
  address: 0.0.0.0

app:
  jwt:
    secret: ************************************
    expiration-hours: 24
  admin:
    username: admin
    password-hash: ************************************************
  allowed-origins: http://localhost:3000,http://127.0.0.1:3000

# Configuration Swagger
springdoc:
  api-docs:
    path: /v3/api-docs
  swagger-ui:
    path: /swagger-ui.html
    enabled: true
    operationsSorter: method
    tagsSorter: alpha
    tryItOutEnabled: true

logging:
  level:
    com.example.appmenu: INFO
    org.springframework.security: WARN